@page
@model Ikazuchi.Web.Areas.RtcSessions.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var creatorUser = Model.Session.Creator;
}

<h1 class="h2">Delete Session <small class="h6 text-muted">@Model.Session.Id</small></h1>

<h3>Are you sure you want to delete this?</h3>

<dl class="row">
    <dt class="col-sm-2">
        Created at
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Session.CreationTime)
    </dd>

    <dt class="col-sm-2">
        Created by
    </dt>
    <dd class="col-sm-10">
        @{
            var screenName = creatorUser.ScreenName;
            if (screenName == null || screenName.Trim().Equals(""))
            {
                screenName = creatorUser.UserName;
            }
        }
        @screenName &lt;@creatorUser.Email&gt;
    </dd>

    <dt class="col-sm-2">
        Visibility
    </dt>
    <dd class="col-sm-10">
        @if (Model.Session.Public)
        {
            <span class="badge badge-primary">Public</span>
        }
        else
        {
            <span class="badge badge-secondary">Private</span>
        }
    </dd>
</dl>

<form method="post">
    <button class="btn btn-danger">Delete</button>
    <a class="btn btn-outlink-dark" href="javascript:history.back();">Back</a>
</form>